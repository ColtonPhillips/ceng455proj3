#include "MessagePool.h"
#include "mqx.h"
#include "message.h"
void init_message_pool() {
	/* create a message pool */
	   message_pool = _msgpool_create(sizeof(MESSAGE),
		  50, 0, 0);
	   if (message_pool == MSGPOOL_NULL_POOL_ID) {
		  printf("\nCould not create a handler message pool\n");
		  _task_block();
	   }
}


